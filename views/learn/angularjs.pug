doctype html
html
    head
        meta(charset='UTF-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
        meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
        meta(name='description', content='')
        meta(name='keywords', content='')
        meta(name='author', content='')
        title #{title}
        link(rel='stylesheet', href='../static/vendor/css/bootstrap.min.css')
    body
        div(ng-app='app' ng-controller='ctr')
            .container.my-5
                h1 {{msg}}



        script(src='../static/vendor/js/jquery-slim.min.js')
        script(src='../static/vendor/js/popper.min.js')
        script(src='../static/vendor/js/bootstrap.min.js')
        script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.6.10/angular.min.js')
        script.
            const strAppName = 'app';
            const strCtrName = 'ctr';
            const app = angular.module(strAppName, []);

            app.config([
                '$httpProvider', function($httpProvider) {
                    $httpProvider.defaults.xsrfCookieName = 'csrftoken';
                    $httpProvider.defaults.xsrfHeaderName = 'X-CSRFToken';
                }]);

            app.controller(strCtrName, [
                '$scope', '$http', '$httpParamSerializer',
                function($scope, $http, $httpParamSerializer) {
                    $scope.msg = 'Hello World';
                }]);
